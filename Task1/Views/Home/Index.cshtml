@model IEnumerable<Task1.Models.Story>

@{
    ViewBag.Title = "Index";
}

@{ var stories = Model.Select(s => s.name).ToList();}

@Styles.Render("~/Content/masonry")
@Styles.Render("~/Content/aos")
@Scripts.Render("~/bundles/aos")


    <div class="container-fluid">
        <div class="col-md-4">
            <h2>Stories</h2>
        </div>
        <div class="col-md-4 text-right">
            <h2>Charts</h2>
        </div>
        <div class="row" style="max-width:60%; float: left">

            @for (var i = 0; i <= 8; i++)
            {
                foreach (var item in Model)
                {
                    <div class="item" data-aos="zoom-in-up" data-aos-anchor-placement="center-bottom" data-aos-duration="1000">
                        <div class="well">
                            @Html.Raw(item.name)
                            <hr />
                            @Html.Raw(item.description)
                        </div>
                    </div>
                }
            }
        </div>

        <div class="col-lg-12" style="max-width:40%; float:right">

            <div class="panel panel-primary" data-aos="zoom-in-up" data-aos-anchor-placement="center-bottom" data-aos-duration="1000">
                <div class="panel-heading">
                    All Story Hours
                </div>
                <div id="chart"></div>
            </div>

            <div class="panel panel-primary" data-aos="zoom-in-up" data-aos-anchor-placement="center-bottom" data-aos-duration="1000">
                <div class="panel-heading">
                    Hours of January
                </div>
                <div id="chart2"></div>
            </div>

            <div class="panel panel-primary" data-aos="zoom-in-up" data-aos-anchor-placement="center-bottom" data-aos-duration="1000">
                <div class="panel-heading">
                    Hours Per Iteration
                </div>
                <div id="chart3" data-aos="zoom-in-up" data-aos-anchor-placement="center-bottom" data-aos-duration="1000"></div>
            </div>

            <div class="panel panel-primary" data-aos="zoom-in-up" data-aos-anchor-placement="center-bottom" data-aos-duration="1000">
                <div class="panel-heading">
                    Hours left
                </div>
                <div id="chart4" data-aos="zoom-in-up" data-aos-anchor-placement="center-bottom" data-aos-duration="1000"></div>
            </div>
            <hr />
            <br />
            <div class="row">
                @for (var i = 0; i <= 2; i++)
                {
                    foreach (var item in Model)
                    {
                        <div class="item" data-aos="zoom-in-up" data-aos-anchor-placement="center-bottom" data-aos-duration="1000">
                            <div class="well">
                                @Html.Raw(item.name)
                                <hr />
                                @Html.Raw(item.description)
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        </div>

@Scripts.Render("~/bundles/chart")