@model Task1.Models.File

@{
    ViewBag.Title = "Details";
    var storyId = Request.QueryString["storyId"];
}

<h2>Details</h2>

<div>
    <h4>File</h4>
    <hr />

    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title">
                <h3>@Html.Raw(Model.Name)</h3>
            </div>
        </div>

        <div class="panel-body">
            <div class="col-md-2">
                <h4>@Html.DisplayNameFor(model => model.Description)</h4>
            </div>
            <div class="col-md-10">
                @Html.Raw(Model.Description)
            </div>
        </div>

        <hr />

        <div class="panel-body">
            <div class="col-md-2">
                <h4>@Html.DisplayNameFor(model => model.FileType)</h4>
            </div>
            <div class="col-md-10">
                @Html.Raw(Model.FileType)
            </div>
        </div>

        <div class="panel-footer">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id, storyId = storyId, taskId = Model.TaskId }) |
            @Html.ActionLink("Back to List", "Index", new { storyId = storyId, taskId = Model.TaskId })
        </div>

    </div>
    </div>
